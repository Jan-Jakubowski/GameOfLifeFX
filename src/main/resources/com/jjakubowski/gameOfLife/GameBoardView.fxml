<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="600.0" prefHeight="650.0"
      fx:controller="com.jjakubowski.gameOfLife.GameBoardController"    >

    <!--Grid-->
    <GridPane prefWidth="600.0" prefHeight="600.0"/>
    <!--Grid Info-->
    <HBox prefWidth="600.0" prefHeight="25.0" alignment="CENTER">
        <VBox alignment="CENTER" prefWidth="125">
            <HBox>
                <Label text="Generation: "/>
                <Label text="0"/>
            </HBox>
        </VBox>
        <VBox alignment="CENTER" prefWidth="110">
            <HBox>
                <Label text="Speed: "/>
                <Label text="V. Slow"/>
            </HBox>
        </VBox>
        <VBox alignment="CENTER" prefWidth="110">
            <HBox>
                <Label text="State: "/>
                <Label text="Paused"/>
            </HBox>
        </VBox>
        <VBox alignment="CENTER" prefWidth="150">
            <HBox>
                <Label text="Rule Set: "/>
                <Label text="Standard"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
